<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Vulyk</title>
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tiro+Devanagari+Hindi&Roboto">
</head>
<body class="px-5 py-2">
	<header class="navbar navbar-expand-lg">
		<div class="container-fluid d-flex justify-content-between">
			<a class="navbar-brand d-flex align-items-center" href="/">
				<img src="~/images/logo-icon.png" width="60" height="60" />
				<span class="gradient-text bold-text">Vulyk</span>
			</a>
			<button class="navbar-toggler" type="button" data-bs-target="#navbarContent" data-bs-toggle="collapse">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarContent">
				<ul class="navbar-nav mx-auto">
					<li class="nav-item text-center">
						<a class="nav-link @(ViewData["CurrentPage"] as string == "Home" ? "header-choosed-page" : "text-secondary")" asp-action="Index" asp-controller="Home">Home</a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link @(ViewData["CurrentPage"] as string == "AboutUs" ? "header-choosed-page" : "text-secondary")" asp-action="AboutUs" asp-controller="Home">About us</a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link @(ViewData["CurrentPage"] as string == "Contact" ? "header-choosed-page" : "text-secondary")" asp-action="Contact" asp-controller="Home">Contact</a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link @(ViewData["CurrentPage"] as string == "Services" ? "header-choosed-page" : "text-secondary")" asp-action="Services" asp-controller="Home">Services</a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link @(ViewData["CurrentPage"] as string == "Blog" ? "header-choosed-page" : "text-secondary")" asp-action="Blog" asp-controller="Home">Blog</a>
					</li>
				</ul>
				<ul class="navbar-nav" id="auth-container">
					<li class="nav-item btn btn-secondary">
						<a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
					</li>
					<li class="nav-item btn btn-primary">
						<a class="nav-link text-white" asp-action="Register" asp-controller="Account">Register</a>
					</li>
				</ul>
			</div>
		</div>
	</header>

	<main role="main">
		@RenderBody()
	</main>

	<footer>
		<div class="d-flex justify-content-between">
			<a class="navbar-brand d-flex align-items-center" href="/">
				<img src="~/images/logo-icon-black.png" width="60" height="60" />
				<span class="bold-text">Vulyk</span>
			</a>
			<div class="d-flex gap-4 flex-column">
				<h2 class="footer-title bold-text">
					Follow us on
				</h2>
				<ul class="d-flex gap-5">
					<li>
						<a href="/">
							<i class="fa fa-facebook"></i>
						</a>
					</li>
					<li>
						<a href="/">
							<i class="fa fa-instagram"></i>
						</a>
					</li>
					<li>
						<a href="/">
							<i class="fa fa-twitter"></i>
						</a>
					</li>
					<li>
						<a href="/">
							<i class="fa fa-linkedin"></i>
						</a>
					</li>
					<li>
						<a href="/">
							<i class="fa fa-youtube"></i>
						</a>
					</li>
				</ul>
			</div>
		</div>

		<ul class="navbar-nav">
			<li class="nav-item text-center">
				<a class="nav-link @(ViewData["CurrentPage"] as string == "Home" ? "footer-choosed-page" : "text-secondary")" asp-action="Index" asp-controller="Home">Home</a>
			</li>
			<li class="nav-item text-center">
				<a class="nav-link @(ViewData["CurrentPage"] as string == "AboutUs" ? "footer-choosed-page" : "text-secondary")" asp-action="AboutUs" asp-controller="Home">About us</a>
			</li>
			<li class="nav-item text-center">
				<a class="nav-link @(ViewData["CurrentPage"] as string == "Contact" ? "footer-choosed-page" : "text-secondary")" asp-action="Contact" asp-controller="Home">Contact</a>
			</li>
			<li class="nav-item text-center">
				<a class="nav-link @(ViewData["CurrentPage"] as string == "Services" ? "footer-choosed-page" : "text-secondary")" asp-action="Services" asp-controller="Home">Services</a>
			</li>
			<li class="nav-item text-center">
				<a class="nav-link @(ViewData["CurrentPage"] as string == "Blog" ? "footer-choosed-page" : "text-secondary")" asp-action="Blog" asp-controller="Home">Blog</a>
			</li>
		</ul>
		<hr />
		<p>Copyright ©2025 Vulyk | All Rights Reserved Terms and Conditions</p>
		<p>| Privacy Policy</p>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
	@await RenderSectionAsync("Styles", required: false)
</body>
</html>
